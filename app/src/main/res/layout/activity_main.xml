<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_get_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Key"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_mag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="Read (Mag)"
        app:layout_constraintTop_toBottomOf="@+id/btn_get_key" />

    <Button
        android:id="@+id/btn_printer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Printer"
        app:layout_constraintTop_toBottomOf="@+id/btn_mag" />

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect"
        app:layout_constraintTop_toBottomOf="@id/btn_printer"/>


</androidx.constraintlayout.widget.ConstraintLayout>